<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<log4net>
		<!-- アダプタ設定 -->
		<appender name="TrainTimeTableAppender" type="log4net.Appender.RollingFileAppender" >
			<!-- ログ・ファイル名の先頭部分 -->
			<File value="./logs/TrainTimeTable-" />
			<!-- ファイル名の日付部分 -->
			<DatePattern value='yyyy-MM-dd".log"' />
			<!-- ログ・ファイル名が固定ではないので“false”を指定 -->
			<StaticLogFileName value="false" />
			<!-- 日付ごとにファイルを作成することを指定 -->
			<RollingStyle value="composite" />
			<!-- 追加書き込み -->
			<AppendToFile value="true" />
			<!-- rollingStyle がSizeまたはCompositeの時の最大ファイルサイズ -->
			<MaximumFileSize value="1GB" />
			<!-- ファイルを切替えるマックス数  -->
			<MaxSizeRollBackups value="99" />
			<!-- 複数のプロセスから同じログファイルに書き込めるようにする -->
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<!-- ログの出力書式 -->
			<layout type="log4net.Layout.PatternLayout">
				<ConversionPattern value="%date{yyyy/MM/dd HH:mm:ss.fff} [%-5p][%4t] %message%n" />
			</layout>
		</appender>
		<appender name="LogConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<!-- ログの出力書式 -->
			<layout type="log4net.Layout.PatternLayout">
				<ConversionPattern value="%date{yyyy/MM/dd HH:mm:ss.fff} [%-5p][%4t] %message%n" />
			</layout>
		</appender>
		<!-- 全てのログ・レベルとする -->
		<filter type="log4net.Filter.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="DEBUG" />
		</filter>
		<root>
			<!-- 出力ログレベル -->
			<!-- 
			  Fatal : システム停止するような致命的な障害レベル
			  Error : システムは停止ないが、問題となる障害レベル
			  Warn  : 障害ではない注意警告レベル
			  Info  : 操作ログなどの情報レベル
			  Debug : 開発用のデバッグメッセージレベル
			  trace : 詳細なデバッグの出力レベル
			  -->
			<level value="Info" />
			<!-- どのログ出力先を使用するか -->
			<!-- 
			<appender-ref ref="TrainTimeTableAppender" />
			  -->
			<appender-ref ref="LogConsoleAppender" />
		</root>
	</log4net>
</configuration>
